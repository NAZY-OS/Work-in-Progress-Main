#!/bin/bash

readonly SCRIPT_NAME="$0"

# Check if a process name is provided as an argument
if [ $# -ne 1 ]; then
    echo "Usage: $SCRIPT_NAME <process_name>"
    exit 1
fi

readonly PROCESS_NAME="$1"

# Get the PID(s) of the process(es) with the given name
readonly PIDS=$(pidof "$PROCESS_NAME")

# Check if any PID(s) were found
if [ -z "$PIDS" ]; then
    echo "No process with the name '$PROCESS_NAME' found."
    exit 1
fi

# Confirm with the user before killing the process(es)
read -p "Are you sure you want to kill the process(es) with the name '$PROCESS_NAME'? (y/n): " choice
case "$choice" in
  y|Y) 
    # Kill the process(es) with the given PID(s)
    kill $PIDS
    ;;
  n|N) 
    echo "Aborted."
    exit 0
    ;;
  *) 
    echo "Invalid choice. Aborted."
    exit 1
    ;;
esac
